#!/usr/bin/env python

import rospy
from std_msgs.msg import Float64
from std_msgs.msg import Float32

rospy.init_node("gazebo_speed_converter")
pub=rospy.Publisher("wheel_velocity", Float64, queue_size=1)

radius=0.2
angular_speed=0;
rate=rospy.Rate(50)

def converter(data):
	angular_speed=data.data/radius

msg=Float64()

while not rospy.is_shutdown():
	msg.data=angular_speed
	pub.publish(msg)
	rate.sleep()
